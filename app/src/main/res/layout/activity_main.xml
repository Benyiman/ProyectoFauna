<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0F2624">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9CE9A">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="395dp"
            android:layout_height="675dp"
            android:layout_below="@id/toggleButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:columnCount="2"
            tools:ignore="UnknownId">

            <ImageView
                android:id="@+id/imageHuemul"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/huemul"
                android:scaleType="centerCrop"
                android:src="@drawable/huemul" />

            <ImageView
                android:id="@+id/imagePuma"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/puma"
                android:scaleType="centerCrop"
                android:src="@drawable/puma" />

            <ImageView
                android:id="@+id/imageSeaWolf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/sea_wolf"
                android:scaleType="centerCrop"
                android:src="@drawable/sea_wolf" />

            <ImageView
                android:id="@+id/imageFox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/fox"
                android:scaleType="centerCrop"
                android:src="@drawable/fox" />

            <ImageView
                android:id="@+id/imageBuhoReal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/buho_real"
                android:scaleType="centerCrop"
                android:src="@drawable/buho_real" />

        </GridLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
