<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2624"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="391dp"
            android:layout_height="520dp"
            android:layout_below="@id/toggleButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="121dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:columnCount="2"
            tools:ignore="UnknownId">

            <ImageView
                android:id="@+id/imageHuemul"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/huemul"
                android:scaleType="centerCrop"
                android:src="@drawable/huemul" />

            <ImageView
                android:id="@+id/imagePuma"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/puma"
                android:scaleType="centerCrop"
                android:src="@drawable/puma" />

            <ImageView
                android:id="@+id/imageSeaWolf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/sea_wolf"
                android:scaleType="centerCrop"
                android:src="@drawable/foca" />

            <ImageView
                android:id="@+id/imageFox"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/fox"
                android:scaleType="centerCrop"
                android:src="@drawable/zorro" />

            <ImageView
                android:id="@+id/imageBuhoReal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/buho_real"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="false"
                android:src="@drawable/buho_real" />

            <ImageView
                android:id="@+id/imageCondor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:contentDescription="@string/buho_real"
                android:scaleType="centerCrop"
                android:soundEffectsEnabled="false"
                android:src="@drawable/condor" />

        </GridLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_width="138dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="149dp"
            android:layout_marginTop="27dp"
            android:text="Fauna Ã‘uble" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="287dp"
            android:layout_marginBottom="113dp"
            android:text="Inicio"
            android:textColor="@color/botones"
            android:textColorLink="@color/botones" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
